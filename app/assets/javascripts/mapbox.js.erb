function saveVenue () {
  $("body").on("submit", ".venue-form", function (event) {
    event.preventDefault();
    if (gon.current_user) {
      var saved = $(this).children("p").children(".save-button");
      saved.empty();
      saved.append("Saved!");
      $.post("/saved", {
        venue_id: $(this).children(".venue-id").text()
      });
    } else {
      alert("You must be signed in to access this feature.")
    }

  });
}

function showSavedPlaces (map) {
  $(".saved-places").on('click', function (event) {
    event.preventDefault();
    $.ajax({
      url: "/saved_places",
      success: showPlaces,
      error: handleError
    })

    function showPlaces (data) {
      deleteAllLayers(map)
      var newLayer = L.mapbox.featureLayer(data)
      clickToSetView2(map, newLayer);
      addClusters(map,newLayer);
    }
  });
}








