<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 sidebar">
      <div class="venue">
      <% if @location_info %>
      
        <% @location_info.each do |location| %>
          <img class="venue-image" src= <%= location[:properties][:image_url] %> />
          <h5> <%= location[:properties][:title] %> </h5>
          <p> <%= location[:properties][:description] %> <p>
          <p> Rating: <%= location[:properties][:rating] %> <p>
          <p> Category: <%= location[:properties][:category] %> <p>

        <% end %>
      <% end %>
      </div>

    </div>

    <div class="col-md-8 main">
      <div id='map'></div>
    </div>

  </div>
</div>

