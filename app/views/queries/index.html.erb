<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 sidebar">
        <div class="row">
              <% if @location_info %>
                <% @location_info.each do |location| %>
                <div class="thumbnail venue">
                  <img class="venue-image" src= <%= location[:properties][:image_url] %> />
                  <div class="caption">
                    <h3 data-lng=<%= location[:geometry][:coordinates][0] %> data-lat= <%= location[:geometry][:coordinates][1] %> > <%= location[:properties][:title] %></h3>
                    <p><%= location[:properties][:description] %></p>
                    <p> Rating: <%= location[:properties][:rating] %> </p>
                    <p> Category: <%= location[:properties][:category] %> </p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                  </div>
                </div>
                <% end %>
              <% else %>
                <h5>Try using the search bar you fuck nugget</h5>   
            <% end %>
        </div>
    </div>

    <div class="col-md-8 main">
      <div id='map'></div>
    </div>

  </div>
</div>

